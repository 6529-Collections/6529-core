{
  "name": "6529-core",
  "version": "0.0.1",
  "author": {
    "name": "6529"
  },
  "description": "6529core APP",
  "private": false,
  "workspaces": [
    ".",
    "renderer"
  ],
  "license": "MIT",
  "main": "main/electron-src/index.js",
  "scripts": {
    "pull-web": "git subtree pull --prefix=renderer renderer-remote main",
    "clean": "rm -rf dist main renderer/out renderer/.next",
    "clean-win": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run clean && npm run build-electron && electron . --dev",
    "dev-win": "npm run clean-win && npm run build-electron-win && electron . --dev",
    "start": "electron . --start",
    "rebuild-sql": "npx electron-rebuild -f -w better-sqlite3",
    "build-renderer": "next build renderer",
    "build-electron": "tsc -p electron-src && cp -r assets main/electron-src/",
    "build-electron-win": "tsc -p electron-src && xcopy /E /I assets main\\electron-src\\assets\\",
    "build": "npm run clean && npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist-win": "ts-node build-win.ts",
    "dist-mac": "npm run build && electron-builder --mac --arm64 --x64 --publish always",
    "dist-linux": "npm run build && electron-builder --linux --publish always",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json"
  },
  "dependencies": {
    "@walletconnect/modal": "^2.6.2",
    "@walletconnect/sign-client": "^2.14.0",
    "app-root-path": "^3.1.0",
    "better-sqlite3": "^11.1.2",
    "dotenv": "^16.4.5",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^5.1.7",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.1",
    "ethers": "^6.13.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/better-sqlite3": "^7.6.10",
    "@types/electron-localshortcut": "^3.1.3",
    "@walletconnect/types": "^2.14.0",
    "electron": "^30.0.8",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.6529.6529core",
    "productName": "6529 CORE",
    "asar": true,
    "protocols": [
      {
        "name": "6529core",
        "schemes": [
          "core6529"
        ]
      }
    ],
    "files": [
      "main/**/*",
      "next.config.mjs",
      "renderer/out/**/*",
      "renderer/public/**/*"
    ],
    "extraResources": [
      "assets/**/*"
    ],
    "publish": [
      {
        "provider": "s3",
        "bucket": "6529bucket",
        "region": "eu-west-1",
        "path": "6529-core-app/${os}/",
        "acl": null
      }
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-mac-${arch}-${version}.${ext}",
      "extendInfo": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "com.6529.6529core",
            "CFBundleURLSchemes": [
              "core6529"
            ]
          }
        ]
      }
    },
    "win": {
      "publisherName": "6529",
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-win-${arch}-${version}.${ext}",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "rfc3161TimeStampServer": "http://timestamp.digicert.com"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "6529 CORE"
    },
    "linux": {
      "icon": "assets",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
