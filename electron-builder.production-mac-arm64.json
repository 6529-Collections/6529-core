{
  "appId": "com.6529.6529core",
  "productName": "6529 Desktop",
  "asar": true,
  "afterSign": "scripts/notarize.js",
  "extraMetadata": {
    "env": {
      "ENVIRONMENT": "production"
    }
  },
  "protocols": [
    {
      "name": "6529core",
      "schemes": ["core6529"]
    }
  ],
  "files": [
    "main/**/*",
    "next.config.mjs",
    "renderer/out/**/*",
    "renderer/public/**/*"
  ],
  "extraResources": [
    "assets/**/*",
    {
      "from": "ipfs-binaries/mac/arm64",
      "to": "ipfs-binaries",
      "filter": ["**/*"]
    }
  ],
  "publish": [
    {
      "provider": "s3",
      "bucket": "6529bucket",
      "region": "eu-west-1",
      "path": "6529-core-app/${os}/",
      "acl": null
    },
    {
      "provider": "generic",
      "url": "https://d3lqz0a4bldqgf.cloudfront.net/6529-core-app/${os}/"
    }
  ],
  "mac": {
    "identity": "6529 Collection LLC (4962266Y3D)",
    "icon": "assets/icon.icns",
    "hardenedRuntime": true,
    "notarize": false,
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64"]
      },
      {
        "target": "zip",
        "arch": ["arm64"]
      }
    ],
    "artifactName": "6529-DESKTOP-mac-${arch}-${version}.${ext}",
    "extendInfo": {
      "CFBundleURLTypes": [
        {
          "CFBundleURLName": "com.6529.6529core",
          "CFBundleURLSchemes": ["core6529"]
        }
      ]
    }
  }
}
